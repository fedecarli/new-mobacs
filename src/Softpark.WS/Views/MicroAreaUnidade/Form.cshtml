@model Softpark.Models.SIGSM_MicroArea_Unidade
@{
    var options = new AjaxOptions
    {
        AllowCache = false,
        HttpMethod = "POST",
        InsertionMode = InsertionMode.ReplaceWith,
        UpdateTargetId = "page-wrapper",
        OnBegin = "beginRequest"
    };
}
@using (Ajax.BeginForm(options))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" value="22" name="NumContrato" id="NumContrato"/>

        <div class="form-group">
            @Html.LabelFor(model => model.CodSetor, "Unidade", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CodSetor", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodSetor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MicroArea, "Micro Área", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MicroArea", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MicroArea, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}