@model Softpark.Models.SIGSM_MicroArea_Unidade
@{
    if (IsAjax)
    {
        Layout = null;
    }
}
<div id="page-wrapper">
    <h2>Remover Associação de Unidade</h2>

    <h3>Deseja realmente remover essa associação?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ASSMED_Contratos.NomeContratante)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ASSMED_Contratos.NomeContratante)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Setores.DesSetor)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Setores.DesSetor)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SIGSM_MicroAreas.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SIGSM_MicroAreas.Descricao)
            </dd>

        </dl>
        @{
            var options = new AjaxOptions
            {
                AllowCache = false,
                HttpMethod = "POST",
                InsertionMode = InsertionMode.ReplaceWith,
                UpdateTargetId = "page-wrapper"
            };
        }
        @using (Ajax.BeginForm(options))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Remover" class="btn btn-default" /> |
                @{
                    var opt = new AjaxOptions
                    {
                        AllowCache = false,
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.ReplaceWith,
                        UpdateTargetId = "page-wrapper"
                    };
                }
                @Ajax.ActionLink("Voltar", "Index", opt)
            </div>
                    }
    </div>
</div>
